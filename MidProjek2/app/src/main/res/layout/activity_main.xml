<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:flow_verticalAlign="center"
    tools:context=".MainActivity"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/et_tipekendaraan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipe Kendaraan [Mobil/Motor]"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/ed_tipeKendaraan"
        android:layout_width="245dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:hint="Case Sensitive" />

    <Button
        android:id="@+id/et_saveTipekendaraan"
        android:layout_width="102dp"
        android:layout_height="40dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="32dp"
        android:text="SAVE TYPE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand [Character >>= 5]"
        android:textSize="12pt"
        android:layout_marginTop="78dp"
        android:hint="Case Sensitive"/>

    <EditText
        android:id="@+id/et_Brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:hint="Case Sensitive"
        android:layout_marginTop="110dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:text="Name [Character >>= 5]"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="194dp"
        android:hint="Case Sensitive" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:text="License: "
        android:textSize="12pt"/>

    <EditText
        android:id="@+id/et_License"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:hint="[A-Z] [0-9]{1,4} [A-Z]{1,3}"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="305dp"
        android:text="Top Speed "
        android:textSize="10pt"
        />

    <EditText
        android:id="@+id/et_TopSpeed"
        android:layout_marginTop="327dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="100 - 250"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="130dp"
        android:text="Gas Capacity"
        android:textSize="9pt"
         />

    <EditText
        android:id="@+id/et_GasCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="327dp"
        android:layout_marginLeft="130dp"
        android:hint="30-60"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="250dp"
        android:text="Wheel "
        android:textSize="10pt"
        />

    <EditText
        android:id="@+id/et_WheelMobil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="327dp"
        android:layout_marginLeft="250dp"
        android:hint="4-6"/>

    <EditText
        android:id="@+id/et_WheelMotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="327dp"
        android:layout_marginLeft="250dp"
        android:hint="2 - 3 "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="369dp"
        android:text="Type: [SUV/Supercar/Minivan]"
        android:textSize="12pt"
        android:id="@+id/viewMobil"
        />

    <EditText
        android:id="@+id/et_TypeMobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="404dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="369dp"
        android:text="Type: [Automatic/ Manual]"
        android:textSize="12pt"
        android:id="@+id/view_motor"
        />

    <EditText
        android:id="@+id/et_TypeMotor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="404dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:text="Entertainment System amount: "
        android:textSize="12pt"
        android:id="@+id/enterMobil"
         />

    <EditText
        android:id="@+id/et_EntertaimentSystemAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="478dp"

         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:text="Jumlah helm: "
        android:textSize="12pt"
        android:id="@+id/enterMotor"
         />

    <EditText
        android:id="@+id/et_jumlahHelm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="478dp"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="520dp"/>

    <TextView
        android:id="@+id/Hasil_jadi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:gravity="center_horizontal"
        android:text="Brand name: "
        android:textSize="10pt"
        android:layout_marginLeft="10pt"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEST DRIVE"
        android:layout_marginTop="610dp"
        android:id="@+id/btn_testDrive"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_brand"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="10dp"
        android:text="Brand: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_name"
        android:layout_marginTop="700dp"
        android:layout_marginLeft="10dp"
        android:text="Name: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_licensePlate"
        android:layout_marginTop="720dp"
        android:layout_marginLeft="10dp"
        android:text="License Plate: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_type"
        android:layout_marginTop="740dp"
        android:layout_marginLeft="10dp"
        android:text="Type:  "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_GasCapacity"
        android:layout_marginTop="760dp"
        android:layout_marginLeft="10dp"
        android:text="Gas Capacity: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_TopSpeed"
        android:layout_marginTop="780dp"
        android:layout_marginLeft="10dp"
        android:text="Tope Speed: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_Wheels"
        android:layout_marginTop="800dp"
        android:layout_marginLeft="10dp"
        android:text="Wheel(s): "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_enterystem"
        android:layout_marginTop="820dp"
        android:layout_marginLeft="10dp"
        android:text="Entertainment System: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_jmlhhelm"
        android:layout_marginTop="820dp"
        android:layout_marginLeft="10dp"
        android:text="Helm: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:layout_marginTop="860dp"
        android:id="@+id/view_PriceMotor"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="880dp"
        android:id="@+id/edit_motorPrice"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_motorPrice"
        android:layout_marginTop="940dp"
        android:textSize="24dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accept"
        android:layout_marginTop="880dp"
        android:layout_marginHorizontal="300dp"
        android:id="@+id/btn_accept"/>


</RelativeLayout>

</ScrollView>